<h3>Listing virtual machine templates</h3>
<div id="index_t">
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>username</th>
        <th>ShellInaBox</th>
        <th>Xml script</th>
        <th>Private key</th>
        <th></th>
      </tr>
    </thead>
    <% @vmts.each do |vmt| %>
      <tr>
        <td><%= vmt.image %></td>
        <td><%= vmt.username%></td>
        <td><%= vmt.shellinabox%></td>
        <td><%= vmt.xml_script %></td>
        <td><%= vmt.private %></td>
        <td class="narrow">
          <%= link_to 'View', vmt,:class=> 'show-button button' %>
          <%= link_to 'Edit', edit_vmt_path(vmt),:class=> 'edit-button button' %>
          <%= link_to 'Destroy', vmt, :confirm => 'Are you sure?', :method => :delete ,:class=> 'delete-button button'%></td>
      </tr>
    <% end %>
  </table>
   <%= will_paginate @vmts %><div class="page_info"><%= page_entries_info @vmts %></div>
</div>
<br/>
<%= link_to 'New virtual machine template', new_vmt_path , :class=> 'add-button button' %>