<%= form_for(@vmt) do |f| %>
  <% if @vmt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vmt.errors.count, 'error') %> prohibited this vmt from being saved:</h2>
      <% @vmt.errors.full_messages.each do |msg| %>
        <%= msg %><br/>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.select :image, options_for_select(@vmt.available, @vmt.image) %>
    <span class="red" title="Required field">*</span>
  </div>
   <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %> 
    <span class="red" title="Required field">*</span>
  </div>
  <div class="field">
    <%= f.label :xml_script %><br />
    <%= f.text_field :xml_script %>
  </div>
  <div class="field">
    <%= f.label :private %><br />
    <%= f.text_area :private %>
  </div>
  <div class="actions">
    <%= submit_tag 'Cancel', :class=> 'cancel' %> <%= f.submit %>
  </div>
<% end %>
